---
import NavBar from "../components/common/NavBar.astro"
import SideBar from "../components/common/SideBar.astro"
import PortfolioContent from "../components/portfolio/PortfolioContent.astro"
---
<html lang="en">

<head>
	<meta charset="utf-8" />
	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<meta name="viewport" content="width=device-width" />
	<title>Welcome to Astro</title>
</head>

<body>
	<NavBar active={1}/>
	<div class="flexContainer">
		<SideBar />
		<PortfolioContent />
	</div>
</body>

</html>

<style>
	body {
		height: 100vh;
		width: 100vw;
		overflow: hidden;
	}

	.flexContainer {
		height: 100%;
		display: flex;
		flex-direction: row;
	}
</style>
<style global>

	* {
		margin: unset;
		padding: unset;
	}

</style>
